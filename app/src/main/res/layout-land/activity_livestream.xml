<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Full Screen Camera Preview -->
    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Left - Close Button -->
    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/close_button_background"
        android:contentDescription="Close"
        android:elevation="12dp"
        android:padding="12dp"
        android:src="@drawable/close"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@android:color/white" />

    <!-- Top Right - Connection & Stats (Lowered) -->
    <LinearLayout
        android:id="@+id/statsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/ultra_glass_card"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Connection Status -->
        <View
            android:id="@+id/connectionStatus"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/connection_dot_red" />

        <!-- FPS -->
        <TextView
            android:id="@+id/fpslabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:text="0fps"
            android:textColor="@color/live_green"
            android:textSize="13sp"
            android:textStyle="bold" />

        <!-- Bitrate -->
        <TextView
            android:id="@+id/bitrateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0kbps"
            android:textColor="#007AFF"
            android:textSize="13sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Bottom Center-Left - Camera Toggle -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/ultra_glass_card"
        android:elevation="12dp"
        android:orientation="horizontal"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Back Camera Button -->
        <TextView
            android:id="@+id/backCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quality_button_selected"
            android:gravity="center"
            android:minWidth="80dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:text="Back"
            android:textColor="@android:color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <!-- Front Camera Button -->
        <TextView
            android:id="@+id/frontCameraButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/quality_button_unselected"
            android:gravity="center"
            android:minWidth="80dp"
            android:paddingHorizontal="24dp"
            android:paddingVertical="16dp"
            android:text="Front"
            android:textColor="#CCCCCC"
            android:textSize="15sp" />

    </LinearLayout>

    <!-- Bottom Right - Go Live Button (Properly Aligned) -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goLiveButton"
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/start_streaming_button"
        android:elevation="16dp"
        android:onClick="goLiveClicked"
        android:stateListAnimator="@null"
        android:text="Go Live"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Live Indicator (Top Center) -->
    <LinearLayout
        android:id="@+id/liveIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/ultra_glass_card"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Live Dot -->
        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/connection_dot_green" />

        <!-- Live Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIVE"
            android:textColor="@color/live_green"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Duration -->
        <TextView
            android:id="@+id/liveDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="00:00"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Network Status Toast (Center) -->
    <TextView
        android:id="@+id/networkStatusOverlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ultra_glass_card"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:text="ðŸ”„ Reconnecting..."
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/goLiveButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/liveIndicator" />

</androidx.constraintlayout.widget.ConstraintLayout>
