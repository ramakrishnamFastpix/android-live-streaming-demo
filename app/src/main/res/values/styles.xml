<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Quality Button Styles -->
    <style name="QualityButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@drawable/quality_button_unselected</item>
        <item name="android:textColor">@color/quality_unselected</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="QualityButton.Selected">
        <item name="android:background">@drawable/quality_button_selected</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- FastPix App Theme -->
    <style name="FastPixTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/fastpix_primary</item>
        <item name="colorPrimaryVariant">@color/background_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor">@color/background_dark</item>
        <item name="android:navigationBarColor">@color/background_dark</item>
    </style>

    <!-- Stream Button Style -->
    <style name="StreamButton" parent="Widget.Material3.Button">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
        <item name="android:elevation">8dp</item>
    </style>
    <style name="LiveStreamTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <!-- Camera Button Style -->
    <style name="CameraToggleButton">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/camera_icon_unselected</item>
    </style>

    <style name="CameraToggleButton.Selected">
        <item name="android:background">@drawable/camera_icon_selected</item>
    </style>

    <!-- Stats Text Style -->
    <style name="StatsText">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StatsLabel">
        <item name="android:textColor">#CCCCCC</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Go Live Button Style -->
    <style name="GoLiveButton" parent="Widget.Material3.Button">
        <item name="android:background">@drawable/go_live_button_gradient</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>

</resources>
